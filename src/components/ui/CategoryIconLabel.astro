---
    interface Props {
        icon: string
        text: string
    }

    const { icon, text } = Astro.props
---

<div class="py-0 space-y-5 flex flex-col items-center">
    <img src={icon} alt={`Icono ${text}`} class="max-w-52">
    <h3 class="text-4xl text-coffee-800 font-mono">{text}</h3>
</div>