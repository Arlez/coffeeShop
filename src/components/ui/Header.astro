---
    import Logo from '../../assets/logo.svg'
    import MainNav from './MainNav.astro';

    interface Props {
        bgImage?: string;
        subtitle: string;
    }

    const { bgImage } = Astro.props
---

<header
    class="min-h-72 relative pb-72"
>
    <div
        style={`background-image: url(${bgImage});`}
        class="inset-0 absolute bg-center bg-cover"
    ></div>

    <div class="absolute inset-0 bg-black/60"></div>

    <div class="relative max-w-7xl mx-auto py-3">
        <div class="flex flex-col items-center lg:flex-row lg:justify-between">
            <a href="/">
                <Logo class="w-72"/>
            </a>
            <MainNav/>
        </div>
        <h2 class="text-4xl text-white font-black uppercase text-center mt-12">{Astro.props.subtitle}</h2>             
    </div>
</header>